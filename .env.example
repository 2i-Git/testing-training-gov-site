# Environment Configuration
NODE_ENV=development
PORT=3000

# Database (Postgres)
# For local dev outside Docker, use localhost:5433 (from docker-compose.dev.yml)
DATABASE_URL=postgres://postgres:postgres@localhost:5433/alcohols

# Session Configuration  
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_NAME=alcohol_license_session

# Security (Rate limiting)
# General limiter (all non-static POSTs)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Forms limiter (final submission only)
FORMS_RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
FORMS_RATE_LIMIT_MAX=10

# API limiter
API_RATE_LIMIT_WINDOW_MS=60000   # 1 minute
API_RATE_LIMIT_MAX=30

# Application
APP_NAME=Alcohol License Training App
APP_VERSION=1.0.0

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
