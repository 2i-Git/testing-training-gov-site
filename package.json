{
  "name": "alcohol-license-training-app",
  "version": "1.0.0",
  "description": "Training application for testers - Alcohol License Application System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "audit-ci --high --report-type full || npm audit || true",
    "depcheck": "depcheck",
    "docker:build": "docker build -t alcohol-license-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env alcohol-license-app",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down",
    "docker:compose:logs": "docker compose logs -f",
    "docker:compose:build": "docker compose build --no-cache",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:db:up": "docker compose -f docker-compose.dev.yml up -d db",
    "docker:db:down": "docker compose -f docker-compose.dev.yml stop alcohol-license-training-dev || true && docker compose -f docker-compose.dev.yml down db || true",
    "e2e:headed": "PLAYWRIGHT_HEADED=1 playwright test --headed",
    "restart": "npm stop --if-present && npm start",
    "prepare": "node -e \"if(process.env.NODE_ENV!=='production'){require('child_process').execSync('simple-git-hooks',{stdio:'inherit'})}\"",
    "cleanup:unfinalized": "node scripts/cleanup-unfinalized-knex.js",
    "cleanup:unfinalized:dry": "node scripts/cleanup-unfinalized-knex.js --dry-run",
    "e2e": "playwright test",
    "db:migrate": "node scripts/db-runner.js migrate",
    "db:rollback": "node scripts/db-runner.js rollback"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "govuk-frontend": "^5.11.1",
    "helmet": "^7.2.0",
    "nunjucks": "^3.2.4",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@stylistic/eslint-plugin": "^2.13.0",
    "audit-ci": "^7.0.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/jest.env.setup.js"
    ],
    "globalSetup": "<rootDir>/tests/jest.globalSetup.js",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!coverage/**",
      "!node_modules/**",
      "!logs/**",
      "!public/**",
      "!config/**",
      "!scripts/**",
      "!tests/**",
      "!playwright.config.js",
      "!eslint.config.js",
      "!**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ]
  },
  "keywords": [
    "training",
    "testing",
    "government",
    "forms",
    "api"
  ],
  "author": "Training Team",
  "license": "MIT",
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "**/*.{json,md,yml,yaml}": "prettier --write"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run lint && npm run format:check && npm run audit && npm test"
  }
}
